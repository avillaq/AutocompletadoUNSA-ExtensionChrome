{
  "name": "AutoFill Form UNSA",
  "description": "Esta extension permite autocompletar las encuesta de evaluación del desempeño docente de la UNSA.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  },
  
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://extranet.unsa.edu.pe/*"],
      "js": ["js/content-script.js"]
    }
  ]
}